# Постройте зиккурат!
# Напишите функцию, которая принимает одно целое число n, а возвращает “ступенчатую” матрицу, состоящую из n этажей.
# Этажи нумеруются с первого, ширина каждой ступеньки равна одной строке или столбцу.
# Пример. 
# Пусть n=4, тогда необходимо вернуть матрицу вида

#      [,1] [,2] [,3] [,4] [,5] [,6] [,7]
# [1,]    1    1    1    1    1    1    1
# [2,]    1    2    2    2    2    2    1
# [3,]    1    2    3    3    3    2    1
# [4,]    1    2    3    4    3    2    1
# [5,]    1    2    3    3    3    2    1
# [6,]    1    2    2    2    2    2    1
# [7,]    1    1    1    1    1    1    1

# В случае n=1, зиккурат будет матрицей 1 на 1, высотой 1.

#      [,1]
# [1,]    1


build_ziggurat <- function(n) {
if (n==1) {return(matrix(1,n*2-1,n*2-1))}
else {
m=matrix(0,n*2-1,n*2-1)
for (i in 1:n) m[i,]=i
for (i in 1:(n-1)) m[n+i,]=n-i
for (i in 1:n) m[i:(2*n-i),i]=i
for (i in 1:(n-1)) m[(n-i):(n+i),n+i]=n-i
return (m)
}
}
